<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="chilerifa.nicolasgh.com.chilerifa.RaffleActivity"
    android:orientation="vertical"
    >

    <TextView
        android:text="Esto es la pantalla de la rifa Bombero donde esta el detalle y podemos comprar o ver premios "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_titulo"
        />

    <Button
        android:id="@+id/btn_prizes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/text_titulo"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="170dp"
        android:text="Premios" />

    <Button
        android:id="@+id/btn_purchase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btn_prizes"
        android:layout_marginLeft="57dp"
        android:layout_marginStart="57dp"
        android:layout_toEndOf="@+id/btn_prizes"
        android:layout_toRightOf="@+id/btn_prizes"
        android:text="Comprar" />

</RelativeLayout>
